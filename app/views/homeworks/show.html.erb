
<div class="dist">
  <h1> 作業內容 </h1> 
  <hr>

  <div class="homework">
    <% if is_admin?(current_user) %>
      <%= link_to("EDIT", edit_homework_path, class: "btn btn-warning pull-right") %>
      <%= link_to("DELETE", homework_path(@homework), method: :delete, class: "btn btn-danger pull-right", data: { confirm: "Are you sure ?" }) %>
    <% elsif current_user.district == @homework.district && !current_user.is_member_of?(@homework)%>
      <%= link_to("交作業", new_homework_answer_path(@homework), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>

  <h4> Title </h4> 
  <%= @homework.title %> 

  <br> <br>

  <h4> Description </h4>
  <%= @homework.description.html_safe %>

  <br>

  <% if @homework.download_link != nil %>
    <h4> Attachment </h4>
    <%= link_to File.basename(@homework.attachment.path), @homework.download_link, target: "_blank"%>
    <br><br>
  <% end %>


  <h4> Deadline :  <%= get_time(@homework.deadline, Time.now.to_datetime) %> </h4> 
</div>

<% if is_admin?(current_user) %>
  <div class="dist">
    <h1> 未批改名單</h1>
    <div style="height:300px; overflow:auto;" >
      <%= render partial: 'submit_list', locals: {answers: @unreviewed_answers} %>
    </div>
  </div>

  <div class="dist">
    <h1> 已批改名單 </h1>
    <div style="height:300px; overflow:auto;" >
      <%= render partial: 'submit_list', locals: {answers: @reviewed_answers} %> 
    </div>
  </div>
  
  <div class="dist"> 
    <h1> 未交名單 </h1>
    <hr>
    <div style="height:300px; overflow:auto;" >
      <table class="table table-hover">
        <thead>
          <th> Class </th>
          <th> Name </th>
          <th> Email </th>
        </thead>
        <tbody>
          <% @non_submitted_students.each do |student| %>
            <tr>
              <td> <%= student.district %> </td>
              <td> <%= student.name  %> </td>
              <td> <%= student.email %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% elsif @answer != nil %>
  <div class="dist"> 
    <% if current_user.is_member_of?(@homework) %>
      <%= link_to("刪除作業", homework_answer_path(@homework, @answer), method: :delete, class: "btn btn-danger pull-right", data: { confirm: "確定要把辛辛苦苦寫的作業刪除掉嗎？" }) %>
      <%= link_to("修改作業", edit_homework_answer_path(@homework, @answer), class: "btn btn-success pull-right") %>
    <% end %>
    <%= render 'answers/content' %>
  </div>

  <% if @review != nil %>
    <div class="dist"> 
      <h1> Review </h1>
      <hr>
      <h3> Points : <font color="red"> <%= @review.point %> </font> </h3> 
      <h3> Comment </h3>
      <%= @review.comment.html_safe %>
    </div>
  <% end %> 
<% end %>




