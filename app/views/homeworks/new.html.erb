<h1> New Homework </h1>
<hr>
<%= simple_form_for @homework do |f| %>
  <div class="form-group">
    <h4> Title </h4>
    <%= f.input :title, input_html: { class: "form-control"}, label: false %>
    
    <br>
    
    <h4> Description </h4>
    <%= f.input :description, input_html: { class: "form-control", id: "wysiwyg" }, label: false %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: {diable_with: "Submitting..."} %> 
<% end %>  

<script>
  $('#wysiwyg').froalaEditor({
    inlineMode: false,
    heightMin: '200px',
    //toolbarButtons: ['bold', 'italic', 'underline', 'insertImage']
    toolbarButtons: ['fullscreen', 'bold', 'italic', 'underline', 'fontFamily', 'fontSize', 'color', 'paragraphStyle', 'paragraphFormat', 'align', 'formatOL', 'formatUL', 'outdent', 'indent', 'quote', 'insertHR', 'insertLink', 'insertImage', 'insertVideo', 'insertFile', 'insertTable', 'undo', 'redo', 'clearFormatting'] 
  })

</script>
