<table class="table table-hover">
  <thead>
    <th> Class </th>
    <th> Name </th>
    <th> Email </th>
    <th> Title </th>
    <th> Submission Time </th>
    <th>  Review </th>
  </thead>
  <tbody>
    <% answers.each do |answer| %>
      <tr>
        <td> <%= answer.author.district %> </td>
        <td> <%= answer.author.name %> </td>
        <td> <%= answer.author.email %> </td>
        <td> <%= link_to answer.title, homework_answer_path(@homework, answer) %> </td>
        <td> <%= submit_time(@homework.deadline, answer.updated_at) %> </td>
        <td>
          <% if is_reviewed?(answer) %>
            <%= link_to answer.review.point, homework_answer_path(@homework, answer), style: "color: red;" %>
          <% else %>
            <%= link_to "Review", homework_answer_path(@homework, answer), class: "btn btn-warning" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
