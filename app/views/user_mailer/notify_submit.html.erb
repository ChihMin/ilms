<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Hi, <%= @user.name %>, 這是你繳交的作業</h3>
  </div>
  <div class="panel-body">
    <h1> 繳交的作業 
    </h1>
    <hr>
    <h3> Title </h3>
    <%= @answer.title %>

    <h3> Description </h3>
    <%= @answer.description.html_safe %>

    <% if @url != nil %>
      <h3> Attachment </h3>
      <%= link_to "Download", @root_url + @url %>
    <% end %>

    <h3> Submission Time :  <%= submit_time(@homework.deadline, @answer.updated_at) %> </h3> 
  </div>
</div>

