<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Hi, <%= @user.name %>, 作業通知</h3>
  </div>
  <div class="panel-body">
	<h3> Title </h3>
	<%= @homework.title %>

	<h3> Description </h3>
	<%= @homework.description.html_safe %>
    
    <% if @attachment_url != nil %>
      <h3> Attachment </h3>
      <%= link_to "Download", @root_url + @attachment_url %>
    <% end %>
    
    <h3> Deadline :  <%= get_time(@homework.deadline, Time.now.to_datetime) %> </h3> 
    
    <br>
    <%= link_to  "點此連結觀看作業內容", @homework_url %> 
  </div>
</div>


