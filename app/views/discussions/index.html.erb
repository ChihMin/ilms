<div class="dist">
<h1> 討論區 </h1>
<hr>
<%= link_to "新增討論", new_discussion_path, class: "btn btn-primary pull-right" %>
<table class="table table-hover"> 
  <thead>
    <th> 標題 </th>
    <th> 回覆數 </th>
  </thead>
  
  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
        <td> <%= link_to discussion.title, discussion_path(discussion) %> </td>
        <td> <%= discussion.messages.count %> </td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
